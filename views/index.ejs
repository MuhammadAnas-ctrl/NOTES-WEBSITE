<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
    rel="stylesheet"
/>
    <title>Document</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block px-5 w-full rounded-md outline-none py-2 bg-zinc-700" type="text" placeholder="Title gose here.." name="title">
                <textarea class="block mt-2 w-full rounded-md outline-none resize-none px-5 py-2 bg-zinc-700" placeholder="write your task details here.." name="details"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create Tasks">
        </form>
        </div>
        <div class="tasks flex flex-wrap gap-4 p-10">
            <% if(files.length > 0){ %>
                <% files.forEach((val)=>{ %>
                    <div class="task  w-72 px-3 rounded-md py-4 bg-zinc-800">
                        <h1 class="text-white text-2xl tracking-tighter"><%= val %></h1>
                        <div class="flex w-full justify-between mt-3 items-center">
                        <a class="text-blue-500 inline-block " href="file/<%= val%>">Read More.</a>
                        <a class="text-zinc-600" href="/edit/<%= val%>">edit filename</a>
                    </div>
                </div>
               <% }) %>
            <% }else{ %>
                <h3 class="text-zinc-300">No Tasks Yet.</h3>
            <% } %>
        </div>


    </div>
</body>
</html>